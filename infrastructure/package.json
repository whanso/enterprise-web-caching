{
  "name": "infrastructure",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "esbuild:token": "esbuild --bundle --platform=node ../lambda/index.ts --outfile=../lambda/index.js",
    "esbuild:all": "npm run esbuild:token",
    "deploy": "cdk deploy --require-approval never",
    "destroy": "cdk destroy --force"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1029.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "^1.126.0",
    "@aws-cdk/aws-ecs": "^1.126.0",
    "@aws-cdk/aws-ecs-patterns": "^1.126.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.126.0",
    "aws-cdk-lib": "2.215.0",
    "constructs": "^10.0.0",
    "esbuild": "^0.25.10",
    "npmcli": "^1.2.2"
  }
}
